<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dm_10dp"
    android:paddingLeft="@dimen/dm_10dp"
    android:paddingRight="@dimen/dm_10dp"
    android:paddingTop="@dimen/dm_10dp"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btnSetting"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm_20dp"
        android:text="Setting"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rltBarcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_20dp"
        android:background="@color/white"
        android:padding="@dimen/dm_10dp">

        <LinearLayout
            android:id="@+id/lnlText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_1dp"
                android:layout_marginRight="@dimen/dm_1dp"
                android:layout_marginTop="@dimen/dm_1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dm_100dp"
                    android:layout_height="@dimen/dm_40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dm_5dp"
                    android:text="Code"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_15sp" />

                <TextView
                    android:id="@+id/txtToPrint"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_40dp"
                    android:layout_marginLeft="@dimen/dm_1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dm_5dp"
                    android:paddingRight="@dimen/dm_5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_1dp"
                android:layout_marginRight="@dimen/dm_1dp"
                android:layout_marginTop="@dimen/dm_1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dm_100dp"
                    android:layout_height="@dimen/dm_40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dm_5dp"
                    android:text="@string/name_ts"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_15sp" />

                <TextView
                    android:id="@+id/txtAssetName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_40dp"
                    android:layout_marginLeft="@dimen/dm_1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dm_5dp"
                    android:paddingRight="@dimen/dm_5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dm_100dp"
                    android:layout_height="@dimen/dm_40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dm_5dp"
                    android:text="@string/date_kk"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_15sp" />

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_40dp"
                    android:layout_marginLeft="@dimen/dm_1dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dm_5dp"
                    android:paddingRight="@dimen/dm_5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_15sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imvBarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnlText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dm_10dp"
            android:adjustViewBounds="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnPrinter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm_10dp"
        android:paddingBottom="@dimen/dm_10dp"
        android:paddingLeft="@dimen/dm_20dp"
        android:paddingRight="@dimen/dm_20dp"
        android:paddingTop="@dimen/dm_10dp"
        android:text="OK" />
</LinearLayout>
